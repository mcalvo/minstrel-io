extends layout

block scripts
    script(src='/javascripts/nations.js')

block content
    h1=title
    p Generate nationalized NPC names

    // Wrapper
    #wrapper
        h2 Add Segment
        #segAdd
            fieldset
                input#inputSegmentText(type='text', placeholder='Text')
                select#inputSegmentType
                select#inputNation
                br
                button#btnAddSegment Add Segment

        #segInfo
            h2 Segment Info
            p
                strong Text:
                |   <span id='segmentText'></span>
                br
                strong Type:
                |   <span id='segmentTypeText'></span>
                br
                strong Priority:
                |   <span id='segmentTypePriority'></span>
                br
                strong Nation:
                |   <span id='segmentNationality'></span>


        h2 Segments
        #segPage
            table
                thead
                    th Segment
                    th Type
                    th Edit?
                    th Delete?


