extends layout

block content
    h1 #{title}
    p Welcome to table display

    // Wrapper
    #wrapper
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Speak?
                    th Delete?
                tbody
                    each user, i in userlist
                        tr
                            td  #{user.username}
                            td
                                a(href="mailto:" + user.email)= user.email
                            td
                                button#btnGreet(type="submit") Greet
                            td
                                button#btnDelete(type="submit") Delete

        p
            a(href="/newuser")= "Create New User"
